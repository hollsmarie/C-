@{
    ViewData["Title"] = "Home Page";
}
<h1>Lost in the woods</h1> <p>A list of local hiking trails</p>



<table>
    <thead>
        <tr>
            <th>Trail Name</th>
            <th>Trail Length</th>
            <th>Elevation Change</th>
            <th>Delete?</th>
        </tr>
    </thead>
    <tbody>
        @{
            @foreach(var trail in ViewBag.Trails)
            {

            <tr>
                <td><a href="show/@trail.Id">@trail.Name</a></td>
                <td>@trail.Length</td>
                <td>@trail.Elevation</td>
                <td><a href="delete/@trail.Id">Delete this trail</td>
            </tr>
            }
        }
    </tbody>
</table>


<a href="new">Add new trail to list</a>