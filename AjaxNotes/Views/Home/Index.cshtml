@{
    ViewData["Title"] = "Home Page";
}
<h1>Add your notes below</h1>

<h3>@TempData["error"]</h3>
<div id="addnotes">
<form action="add" method="POST">
    <label for="title">Title: </label>
    <input type="text" name="title">
    <br>
    <br>
    <label for="description">Description: </label>
    <textarea name="description" cols="20" rows="5"></textarea>
    <br>
    <br>
    <input type="submit" name="submit" value="submit">
</form>
</div>

<div id="display">
    @{
        foreach(var note in ViewBag.Notes) //cycle through quotes in viewbag.quotes
        {
            <div class="boxes">
            <h3>@note["title"]</h3>
            <h4>@note["description"]</h4>
            <p>created at @note["created_at"]</p>
            <p>updated at @note["updated_at"]</p>
            <a href="edit/@note["notesid"]">Edit</a>   <a href="delete/@note["notesid"]">Delete</a>
            </div>
        }
    
    }


</div>